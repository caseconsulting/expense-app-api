{
  "root": true,
  "env": {
    "es6": true,
    "jasmine": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },
  "globals": {},
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "indent": ["error", 2, { "SwitchCase": 1, "flatTernaryExpressions": true }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", "avoid-escape"],
    "semi": ["error", "always"],
    "generator-star-spacing": "off",
    "no-debugger": "error",
    "no-console": "off"
  }
}
