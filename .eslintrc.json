{
  "env": {
    "es6": true,
    "node": true,
    "jasmine": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "rules": {
    "max-len": ["error", {
      "code": 120
    }],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }]
  },
  "globals": {
    "_": true,
    "uuid": true
  }
}
